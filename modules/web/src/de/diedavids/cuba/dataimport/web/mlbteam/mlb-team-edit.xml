<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.dataimport.web.mlbteam.MlbTeamEdit"
        datasource="mlbTeamDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.dataimport.web.mlbteam">
    <dsContext>
        <datasource id="mlbTeamDs"
                    class="de.diedavids.cuba.dataimport.entity.example.MlbTeam"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="mlbTeamDs">
            <column width="250px">
                <field property="name"/>
                <field property="code"/>
                <field property="state"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
