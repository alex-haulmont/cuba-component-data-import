<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="de.diedavids.cuba.dataimport.web.importwizard.ImportWizard"
        messagesPack="de.diedavids.cuba.dataimport.web.importwizard">

    <dsContext>
        <collectionDatasource id="mapAttributesDatasource"
                              class="de.diedavids.cuba.dataimport.entity.ImportAttributeMapper"
                              datasourceClass="de.diedavids.cuba.dataimport.web.importwizard.MapAttributesDatasource" />
    </dsContext>

    <actions>
        <action id="cancelWizardAction"
                caption="mainMsg://action.cancel"
                icon="icons/cancel.png"
                invoke="cancelWizard"/>
        <action id="toStep3"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="toStep3"/>
        <action id="closeWizardAction"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                enable="false"
                invoke="closeWizard"/>
    </actions>
    <dialogMode forceDialog="true"
                resizable="true"
                height="600"
                width="800"/>
    <layout expand="wizardAccordion" spacing="true">
        <accordion id="wizardAccordion">
            <tab id="step1"
                 caption="msg://step1Title"
                 margin="true"
                 expand="dropZone"
                 spacing="true">

                <buttonsPanel align="TOP_CENTER">
                    <upload id="importFileUploadBtn"
                            accept=".csv,.xlsx"
                            dropZone="dropZone"
                            uploadButtonCaption="msg://uploadBtnCaption"
                            uploadButtonDescription="msg://uploadBtnDescription"
                            uploadButtonIcon="icons/upload.png"/>
                </buttonsPanel>
                <vbox id="dropZone"
                      spacing="true"
                      stylename="cuba-static-drop-zone">
                    <label align="MIDDLE_CENTER"
                           stylename="cuba-upload-dropzone-description"
                           value="Drop file here..."/>
                </vbox>

            </tab>
            <tab id="step2"
                 caption="msg://step2Title"
                 enable="false"
                 margin="true"
                 spacing="true" expand="mapAttributesTable">

                <lookupField id="entityLookup" width="100%"
                             caption="Entity"/>
                
                <table id="mapAttributesTable" visible="false" editable="true" width="100%" height="200px">
                    <columns>
                        <column id="fileColumnNumber" editable="true"/>
                        <column id="fileColumnAlias" editable="true"/>
                        <column id="entityAttribute" editable="true"/>
                    </columns>
                    <rows datasource="mapAttributesDatasource"/>
                </table>
                <buttonsPanel align="TOP_RIGHT">
                    <button id="toStep3"
                            action="toStep3"
                    />
                </buttonsPanel>

            </tab>
            <tab id="step3"
                 caption="msg://step3Title"
                 enable="false"
                 margin="true"
                 spacing="true">

                <vbox id="resultTableBox" height="100%" width="100%"/>


            </tab>
        </accordion>
        <buttonsPanel align="TOP_RIGHT">
            <button id="closeWizard"
                    action="closeWizardAction"
            />
            <button id="cancelWizard"
                    action="cancelWizardAction"
            />
        </buttonsPanel>
    </layout>
</window>